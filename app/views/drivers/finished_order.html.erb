<%= render 'layouts/driver_nav'%>
<%=provide(:name,'Finished Orders')%>

<%= render 'layouts/time'%>
<div class='row'>
  <%= form_for(@key ,url:{controller: "#{@controller}",action: "#{@action}"}, method:'get',html: {class: "form-inline"} ) do |f|%>
    <div class='row'>
      
        <div class='form-group'>
          
          <div class='input-group col-lg-12'>
            <div class="input-group date form_datetime"  data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                    <span class="input-group-addon">Time</span>
                    <%= f.text_field :time, class:'form-control', readonly: true%>
                    
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
					<span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
          </div>
        </div>
       <div class='form-group'>
    
    <div class='input-group col-lg-12'>
      <span class='input-group-addon'>Destination</span>
      <%= f.text_field :destination, class:"form-control"%>
    </div>
    
</div>
      <%= f.submit "Search", class: "btn btn-primary" %>
    </div>
  <%end%>
  
</div>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>No</th>
      <th>Number</th>
      <th>Time</th>
      <th>Destination</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.number %></td>
        <td><%= order.time%></td>
        <td><%= order.destination%></td>
        <td> Finished </td>
      </tr>    
    <% end %> 
  </tbody>
</table>